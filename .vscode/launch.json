    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to remote",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "address": "localhost",
            "port": 9229,
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceFolder}/*"
            },
            "protocol": "inspector",
            "remoteRoot": "/app",
            "localRoot": "${workspaceFolder}",
        }
    ]
}